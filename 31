#include <stdio.h>
union Un
{
	char c;
	int i;
};
int main()
{
	union Un u = { 0 };
	printf("%d\n", sizeof(u));
	printf("%p\n", u.c);
	printf("%p\n", u.i);
	printf("%p\n", u);
	return 0;
}
